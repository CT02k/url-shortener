    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "ioredis": "^5.9.3",
    "jsonwebtoken": "^9.0.3",
    "node-cron": "^4.2.1",
    "swagger-ui-express": "^5.0.1",
    "zod": "^3.24.1"
