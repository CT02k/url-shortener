generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model shortenedUrl {
  slug     String @id @default(nanoid(7))
  redirect String

  stats    shortenedUrlStats?
  visitors shortenedUrlVisitor[]
  user     user?                 @relation(fields: [userId], references: [id])
  userId   String?
}

model shortenedUrlStats {
  id           Int       @id @default(autoincrement())
  slug         String    @unique
  clicks       Int       @default(0)
  uniqueClicks Int       @default(0)
  lastClickAt  DateTime?

  url shortenedUrl @relation(fields: [slug], references: [slug], onDelete: Cascade)
}

model shortenedUrlVisitor {
  id          Int      @id @default(autoincrement())
  slug        String
  visitorId   String
  firstSeenAt DateTime @default(now())

  url shortenedUrl @relation(fields: [slug], references: [slug])

  @@unique([slug, visitorId])
}

model user {
  id       String @id @default(uuid())
  username String @unique
  password String

  shortenedUrls shortenedUrl[]
}
